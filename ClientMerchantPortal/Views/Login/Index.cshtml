@model ClientMerchantPortal.Context.LoginDetail
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-offset-2">
    <h2>Portal Login</h2>

    @using (Html.BeginForm("CheckLogin", "Login", FormMethod.Post))
    {
        <div class="container">
            <div class="form-group">
                <label> Username</label>
                @Html.TextBoxFor(x =>x.Username, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label> Password</label>
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
            </div>

            <div class="form-group"><button type="submit" class="btn btn-primary"> Sign In</button></div>
        </div>


    }
</div>


